@model IEnumerable<EiAtende.PortalConhecimentos>

<!DOCTYPE html>
<html>

@using (Html.BeginForm())
{
    <body id="body" class="no-skin">
        <div class="main-container" id="main-container">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="table-header" style="background-color:lightgray">
                                &nbsp;&nbsp;
                                <input type="text" name="pesq_titulo" style="width:300px;margin-top:4px" placeholder="Pesquise um Titulo ou Tags ... " />
                                <button type="submit" name="submit" value="pesquizar" class="btn btn-purple btn-sm">
                                    <span class="ace-icon fa fa-search icon-on-right small"></span>
                                    Pesq
                                </button>
                                <button type="button" class="btn btn-xs btn-primary pull-right" style="margin-top:5px;margin-right:5px;" onclick="location.href='@Url.Action("NovoConhecimento", "PortalConhecimentos")'">
                                    <span class="bigger-110">Novo Manual</span>
                                    <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                </button>



                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <div class="row">
                            <div class="col-md-12">
                                <div>
                                    <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>Codigo</th>
                                                <th>Titulo</th>
                                                <th>Descrição</th>
                                                <th>Link Externo</th>
                                                <th>Tags de Busca</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {

                                            <tbody>
                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.CnhID)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.CnhTitulo)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.CnhDescricao)</td>
                                                    <td>
                                                        <a target="_blank" href="~/PortalConhecimentos/VisualizarConhecimento?id=@item.CnhID">Visualizar</a>
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.CnhTagsBusca)</td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <div class="input-group">
                                                                <div class="input-group-btn">
                                                                    <button class="btn btn-success btn-xs btn-circle" data-toggle="dropdown">
                                                                        Ação
                                                                        <i class="fa fa-caret-down"></i>
                                                                    </button>
                                                                    <ul class="dropdown-menu">
                                                                        <li><a class="dropdown-item" href="~/PortalConhecimentos/NovoConhecimento?Id=@item.CnhID&Acao=Editar">Editar</a></li>
                                                                        <li class="dropdown-divider"></li>
                                                                        <li><a class="dropdown-item" href="~/PortalConhecimentos/NovoConhecimento?Id=@item.CnhID&Acao=Excluir">Excluir</a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div><!-- /.btn-group -->


                                                    </td>
                                                </tr>
                                            </tbody>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->

            </div>

        </div><!-- /.main-container -->
        <!-- basic scripts -->
        <!--[if !IE]> -->

    </body>
}
</html>
