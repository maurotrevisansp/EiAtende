@model EiAtende.PortalTipoChamados


<h3>Criar Novo Tipo de Chamado</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <small>Nome</small>
            @Html.EditorFor(model => model.TipoChamadoNome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TipoChamadoNome, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            <small>Empresa</small>
            @Html.DropDownList("EmpID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmpID, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-12">
            <hr />
        </div>

        <div class="col-md-2">
            <input type="submit" value=" Salvar " class="btn btn-gray" />
        </div>

        <div class="col-md-2">
            <a href="~/PortalTipoChamados/Index" class="btn btn-default">Cancelar</a>
        </div>

    </div>
}

